---
import { getLocale } from 'astro-i18n-aut';

const locale = getLocale(Astro.url);
---

<a
  href={locale === 'uk' ? '/en' : '/'}
  class='flex aspect-square items-center justify-center bg-black/60 p-2 text-center text-sm text-white duration-300 hover:bg-black/50 lg:text-base xl:text-lg 2xl:text-xl'
>
  {locale === 'uk' ? 'EN' : 'UA'}
</a>
