---
import { getLocale } from 'astro-i18n-aut';
import { t } from 'src/utils/i18n.ts';
import { Icon } from 'astro-icon/components';

const locale = getLocale(Astro.url);
const localedData = t(locale).about;

const infos: Array<{
  title: string;
  description: string;
  icon: string;
}> = localedData.info;
---

<div class='mb-5 mt-10 grid grid-cols-1 gap-5 px-6 md:grid-cols-2 md:px-10 lg:grid-cols-3 lg:px-12'>
  {
    infos.map((e, i) => (
      <div
        class='flex flex-col gap-1'
        data-aos='fade-up'
        data-aos-duration='400'
        data-aos-delay={50 * i}
      >
        <div class='aspect-square w-min rounded-md bg-blue-500 p-2'>
          <Icon name={`infos-${e.icon}`} class='h-10 w-10 text-white' />
        </div>
        <h3 class='text-xl font-semibold'>{e.title}</h3>
        <p>{e.description}</p>
      </div>
    ))
  }
</div>
