---
import { getLocale } from 'astro-i18n-aut';
import { t } from '../utils/i18n.ts';
import Block from '../components/grid/Block.astro';
import { Prepr } from 'src/utils/prepr';
import GetReportings from 'src/queries/get-reportings';
import Grid from '../layouts/Grid.astro';

const locale = getLocale(Astro.url);
const localedData = t(locale).reportings;

const response = await Prepr(GetReportings());
const { data } = await response.json();
const reportings = data.Reportings.items;
---

<Grid title={localedData.title} description={localedData.description}>
  <!-- Grid elements -->
  <Block md lg />
  <Block md lg />
  <Block md lg />
  <Block md lg />
  <Block md lg />
  <Block md lg />
  <Block lg />
  <div class='col-span-2 bg-white p-5 md:col-span-4 lg:col-span-6'>
    <h1 class='text-center text-4xl font-bold'>{localedData.title}</h1>
    {
      reportings.map((e: any) => (
        <div class='my-5'>
          <h2 class='text-center text-3xl font-bold'>{e.year}</h2>
          <div class='mt-3 grid grid-cols-1 gap-5 md:grid-cols-2'>
            <a
              href={e.finance.url}
              title={`${localedData.finance} ${e.year}${localedData.year}`}
              target='_blank'
              class='flex flex-row items-center gap-3 rounded-md bg-slate-100 duration-300 hover:bg-slate-200'
            >
              <div class='rounded-md px-5 py-3'>
                <div class='flex items-center justify-center rounded-full bg-slate-300 p-2'>
                  <img
                    src='/icons/pdf.svg'
                    alt={`${localedData.finance} ${e.year} PDF`}
                    title='PDF'
                    width='32'
                    height='32'
                  />
                </div>
              </div>
              <p class='text-xl'>{localedData.finance}</p>
            </a>
            <a
              href={e.auditory.url}
              title={`${localedData.auditory} ${e.year}${localedData.year}`}
              target='_blank'
              class='flex flex-row items-center gap-3 rounded-md bg-slate-100 duration-300 hover:bg-slate-200'
            >
              <div class='rounded-md px-5 py-3'>
                <div class='flex items-center justify-center rounded-full bg-slate-300 p-2'>
                  <img
                    src='/icons/pdf.svg'
                    alt={`${localedData.auditory} ${e.year} PDF`}
                    title='PDF'
                    width='32'
                    height='32'
                  />
                </div>
              </div>
              <p class='text-xl'>{localedData.auditory}</p>
            </a>
          </div>
        </div>
      ))
    }
  </div>
</Grid>
