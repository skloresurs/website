---
import { getLocale } from 'astro-i18n-aut';
import { t } from '../../utils/i18n.ts';
import Grid from '../../layouts/Grid.astro';
import Block from '../../components/grid/Block.astro';
import ServicesCategoryButton from '../../components/grid/ServicesCategoryButton.astro';

const locale = getLocale(Astro.url);
const localedData = t(locale).services.components;
---

<Grid title={localedData.title} description={localedData.description}>
  <Block mobile md lg />
  <ServicesCategoryButton category='delivery' />
  <ServicesCategoryButton category='components' active />
  <ServicesCategoryButton category='seminars' />
  <ServicesCategoryButton category='vacancies' />
  <Block lg />
  <Block md lg />
  <div class='col-span-2 bg-white p-5 pt-12 md:col-span-4 md:px-12 lg:col-span-6'>
    <h1 class='mb-5 text-4xl font-bold uppercase'>{localedData.content.h1}</h1>
    <div class='relative'>
      <div class='absolute inset-x-0 h-full w-16 border-b-2 border-l-2 border-neutral-700'></div>
      <div class='py-6 pl-5'>
        <Fragment set:html={localedData.content.main} />
      </div>
    </div>
  </div>
</Grid>
